<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.tang.myjob.dao.product.ProductDao">

	<resultMap type="ProductDTO" id="ProductDTO">
		<id 	column="id" property="id" />
		<result column="name" property="name" />
		<result column="desc" property="desc" />
		<result column="pic_url" property="picUrl" />
		<result column="price" property="price" />
		<result column="color" property="color" />
		<result column="style" property="style" />
		<result column="brand" property="brand" />
	</resultMap>


	<!-- 查询用户登录  用户信息放入session -->
	<select id="selectProduct"  resultMap="ProductDTO" >
		<![CDATA[
 			select id,name,desc,pic_url,price,color,style,brand from t_portal_product
 		]]>
	</select>

</mapper>